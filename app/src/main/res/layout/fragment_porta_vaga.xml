<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PortaVaga">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/porta_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adlam_display"
                android:text="Porta Vaga"
                android:textAlignment="center"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/porta_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif"
                android:text="Upper Session Rd., Baguio, 2600 Benguet"
                android:textAlignment="center"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/porta_img"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/portavaga" />

            <TextView
                android:id="@+id/porta_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operating Hours: 8AM - 8PM Daily"
                android:textStyle="bold"
                android:fontFamily="@font/afacad"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/porta_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/afacad"
                android:text="Porta Vaga Mall is a vibrant shopping destination located along Session Road in Baguio City. Known for its modern design and welcoming atmosphere, the mall serves as a hub for local, national, and international entrepreneurs, showcasing a diverse range of brands and products. With over 10,000 likes on social media, it has become a popular spot for both locals and tourists looking to explore various shopping options."
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
